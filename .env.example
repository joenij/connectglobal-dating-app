# ConnectGlobal Environment Configuration
# Copy this file to .env and fill in your values

# App Configuration
NODE_ENV=development
PORT=3000
APP_NAME=ConnectGlobal
API_VERSION=v1
FRONTEND_URL=http://localhost:3000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=connectglobal_dev
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_SSL=false

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_make_it_very_long_and_random
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Encryption Keys
ENCRYPTION_KEY=your_32_character_encryption_key_12
MESSAGE_ENCRYPTION_KEY=another_32_char_key_for_messages_1

# External APIs
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Email Configuration (SendGrid/Mailgun)
EMAIL_SERVICE=sendgrid
SENDGRID_API_KEY=your_sendgrid_api_key
FROM_EMAIL=noreply@connectglobal.app

# File Storage (AWS S3)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
S3_BUCKET_NAME=connectglobal-media
CLOUDFRONT_URL=https://your-cloudfront-domain.com

# Security Services
MICROSOFT_COGNITIVE_SERVICES_KEY=your_microsoft_key
MICROSOFT_COGNITIVE_SERVICES_REGION=eastus

# Social Media APIs
TIKTOK_CLIENT_ID=your_tiktok_client_id
TIKTOK_CLIENT_SECRET=your_tiktok_client_secret

# Geolocation Services
GOOGLE_MAPS_API_KEY=your_google_maps_api_key
MAXMIND_LICENSE_KEY=your_maxmind_license_key

# Analytics
MIXPANEL_TOKEN=your_mixpanel_token
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# Monitoring
SENTRY_DSN=your_sentry_dsn
DATADOG_API_KEY=your_datadog_api_key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security Headers
CORS_ORIGIN=http://localhost:3000
ALLOWED_HOSTS=localhost,127.0.0.1

# Feature Flags
ENABLE_VIDEO_VERIFICATION=true
ENABLE_DEEPFAKE_DETECTION=true
ENABLE_DISASTER_PRICING=true
ENABLE_TIKTOK_INTEGRATION=false

# Development Only
DEBUG=connectglobal:*
LOG_LEVEL=debug
# ConnectGlobal Production Environment Configuration
# Generated for jneconnect.com deployment

# Domain Configuration
DOMAIN_NAME=jneconnect.com
MAIL_HOSTNAME=mail.jneconnect.com
FRONTEND_URL=https://jneconnect.com

# Database Configuration
POSTGRES_DB=connectglobal_prod
POSTGRES_USER=connectglobal_user
POSTGRES_PASSWORD=ConnectGlobal_DB_2025_Prod_$ecure!

# Redis Configuration
REDIS_PASSWORD=Redis_ConnectGlobal_2025_Cache_$ecure!

# JWT Security
JWT_SECRET=JWT_ConnectGlobal_2025_SuperSecure_Token_$ign1ng!
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# SMTP Configuration (Self-Hosted)
SMTP_PASSWORD=SMTP_ConnectGlobal_2025_Mail_$ecure!
FROM_EMAIL=noreply@jneconnect.com

# Grafana Monitoring
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=Grafana_ConnectGlobal_2025_Monitor_$ecure!

# Backup Configuration
BACKUP_RETENTION_DAYS=30

# Application Settings
NODE_ENV=production
LOG_LEVEL=info
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# Storage Configuration
STORAGE_TYPE=local
STORAGE_PATH=/app/uploads

# Security Headers
CORS_ORIGIN=https://jneconnect.com

# Performance Settings
MAX_UPLOAD_SIZE=50mb
REQUEST_TIMEOUT=30000